<section class="cart" py-16>
    <% if(session.cart) { %>
<div class="order container mx-auto w-1/2">
  
<div class="flex items-center">

    <img class="w-2/8" src="/image/order.png" alt="" height="80" width="80">
    <h1 class="font-bold text ml-4 text-2xl">Order Summary</h1>
</div>

<div class="pizza-list">
    <% for(let pizza of Object.values(session.cart.items)) { %> 
    
<div class="flex items-center">
    <img class="w-24" src="/image/<%= pizza.item.image %>" alt="">

   <div class="ml-6 flex-1">
       <h1><%= pizza.item.name %></h1>
         <span><%= pizza.item.size %></span>

   </div>
<span class="flex-1"><%= pizza.qty%></span>
<span class="font-bold "><%= pizza.item.price*pizza.qty %></span>


</div>

<% } %>


<hr>
<div class="text-right py-4">
    <div>
        <span class="text-lg font-bold">Total Amount:</span>
        <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalPrice %></span>
        </div>
        <% if(user) { %>

<div>
    <% if(messages.error) { %>
        <span class="text-red-500 text-sm"><%= messages.error %></span>
         <% } %>
    <form action="/orders"  method="POST" class="mt-12">
    <input name="phone" class="border border-gray-400 p-2 w-a/2 mb-4" type="text" placeholder="phone number">
    <input name="Address" class="border border-gray-400 p-2 w-a/2 mb-4" type="text" placeholder="Address">
    <div>
        <button class="btn-primary  rounded-full text-white font-bold py-2 px-4 rounded "  type="submit">Place order</button>
    </div>

    </form>
</div>
<% } else { %>
    <button class="btn-primary  rounded-full text-white font-bold py-2 px-4 rounded " type="button">
    <li> <a href="/login">Login to Continue</a></li>
 </button>
    <% } %>


</div>
</div>
<% } else { %>
<div class="container mx-auto text-center">
<h1 class="text-3xl font-bold mb-2">Cart empty</h1>
<p class="text-gray-500 mb-6">You dint order</p>
<img class="w-2/6 mx-auto" src="/image/empty.jpg" alt="">
<a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
</div> 
<% } %>
</section> 